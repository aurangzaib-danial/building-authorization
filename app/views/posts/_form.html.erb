<%= form_with model: post do |form| %>
  
  <% if post.errors.any? %>
    <div id="errors">
      <h2><%= post.errors.count %> errors prevented this post from being saved</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :title %><br>
  <%= form.text_field :title %><br>
  <%= form.label :body %><br>
  <%= form.text_area :body %><br>
  <%= form.submit %>
<% end %>
